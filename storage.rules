rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Los usuarios solo pueden escribir en su propia carpeta de usuario.
    // La ruta del archivo debe coincidir con el UID del usuario, el ID de la obra y el ID del archivo.
    match /users/{userId}/{workId}/{fileId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
