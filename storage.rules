rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /obras/{workId}/files/{allPaths=**} {
      // La regla de ESCRITURA verifica los metadatos del archivo que se sube
      allow write: if request.auth != null && request.auth.uid == request.resource.metadata.userId;

      // La regla de LECTURA verifica los metadatos del archivo que ya existe
      allow read: if request.auth != null && resource.metadata.userId == request.auth.uid;
    }
  }
}